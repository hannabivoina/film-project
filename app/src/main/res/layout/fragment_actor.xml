<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginBottom="56dp">

    <include
        android:id="@+id/mainToolbar"
        layout="@layout/toolbar_main"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/mainToolbar"
        android:orientation="vertical">

        <TextView
            android:id="@+id/actorName"
            android:layout_width="328dp"
            android:layout_height="45dp"
            tools:text="Actors name"
            android:textColor="@color/holo_red"
            android:textSize="32sp"
            android:maxLines="2"
            android:layout_marginTop="10dp"
            android:layout_marginStart="16dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/actorJob"
            android:layout_width="328dp"
            android:layout_height="19dp"
            android:textSize="14sp"
            tools:text="Actor, producer"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp" />

        <LinearLayout
            android:id="@+id/actorInfoLay"
            android:layout_width="match_parent"
            android:layout_height="184dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/actorPhoto"
                android:layout_width="107dp"
                android:layout_height="160dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_margin="16dp"
                tools:srcCompat="@tools:sample/avatars" />


            <LinearLayout
                android:id="@+id/actorInfoTextLay"
                android:layout_width="213dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:layout_marginTop="16dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/actorInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="ns;dcdncdsjknjkcdnkj;snkdnskn"
                    android:textColor="@color/white"
                    android:textSize="14dp"
                    android:maxLines="6"/>

                <TextView
                    android:id="@+id/actorBirth"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="Born: 16 jan 1989"
                    android:textColor="@android:color/secondary_text_dark"
                    android:textSize="14dp"/>

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/filmographyTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/filmography"
            android:textColor="@color/white"
            android:layout_marginTop="8dp"
            android:textSize="24sp"
            android:layout_marginStart="16dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerActorFilms"
            android:layout_marginTop="10dp"
            android:layout_marginStart="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/filmographyTitle"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>