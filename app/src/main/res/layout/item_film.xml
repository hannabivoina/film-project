<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="110dp"
    android:layout_height="222dp"
    android:layout_margin="3dp"
    app:cardCornerRadius="5dp"
    app:layoutDescription="@xml/item_film_scene">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/itemFilmLay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/reset">

        <ImageView
            android:id="@+id/filmPoster"
            android:layout_width="match_parent"
            android:layout_height="146dp"
            app:layout_constraintBottom_toTopOf="@id/filmTitle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/filmTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:maxLines="2"
            android:ellipsize="end"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/filmPoster"
            tools:ignore="TouchTargetSizeCheck"
            tools:text="Хроники Нарнии" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/filmInfoLay"
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                >

                <TextView
                    android:id="@+id/filmRating"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:layout_alignStart="@id/filmRatingImage"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/filmPoster"
                    tools:ignore="TouchTargetSizeCheck"
                    tools:text="8.1"/>

                <ImageView
                    android:id="@+id/filmRatingImage"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/star" />

            </LinearLayout>

            <TextView
                android:id="@+id/filmYear"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:maxLines="2"
                android:layout_marginStart="12dp"
                android:textSize="14sp"
                tools:ignore="TouchTargetSizeCheck"
                tools:text="2011"
                android:gravity="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
